<h1>ChatRooms#show</h1>

<div>
  <%= link_to "ユーザー一覧に戻る", "/users/index" %>
</div>
<h4>気になる同士</h4>
<% @entries.each do |e| %>
  <div">
  <strong>
    <a href="/users/<%= e.user.id %>">
      <%= e.user.name %>さん
    </a>
  </strong>
  </div>
<% end %>
<hr>
<div>
  <div>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div>
          <div> <strong><%= m.content %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= form_for @message do |f| %>
      <%= f.text_field :content, placeholder: "メッセージを入力して下さい" , size: 70 %>
        <%= f.hidden_field :chat_room_id, value: @room.id %>
          <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>