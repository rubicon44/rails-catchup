<div>いいね件数： <%= goal.likes.count %></div>

<% if current_user.already_liked?(goal) %>
  <% if goal.user != current_user %>
    <%= button_to 'いいねを取り消す', goal_like_path(goal), method: :delete %>
  <% end %>
<% else %>
  <% if goal.user != current_user %>
    <%= button_to 'いいね', goal_likes_path(goal) %>
  <% end %>
<% end %>

<p>いいねしたユーザー</p>
<% goal.liked_users.each do |user| %>
  <li><%= user.username %></li>
<% end %>