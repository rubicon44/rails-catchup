<% if user_signed_in? %>
  <% if current_user.already_liked?(goal) %>
    <% if goal.user != current_user %>
      <%= link_to 'いいねを取り消す', goal_like_path(goal), method: :delete, class: "liked-button" %>
    <% end %>
  <% else %>
    <% if goal.user != current_user %>
      <%= link_to 'いいね', goal_likes_path(goal), method: :post %>
    <% end %>
  <% end %>
<% end %>