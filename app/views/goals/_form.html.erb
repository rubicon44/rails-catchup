<%= form_with(model: @goal, local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, [['未対応',0],['処理中',1],['処理済み',2],['完了',3]] %>
  </p>

  <p>
    <%= form.submit "登録" %>
  </p>
<% end %>