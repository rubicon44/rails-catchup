<%= form_with(model: @goal, local: true, class: "goal-form") do |form| %>
  <div class="goal-form-title">
    <%= form.hidden_field :name %>
    <%= form.text_field :name, placeholder: "題名" %>
  </div>

  <div class="goal-form-content">
    <%= form.hidden_field :description %>
    <%= form.text_area :description, placeholder: "内容" %>
  </div>

  <div class="goal-form-status">
    <%= form.label :status, "状態" %>
    <%= form.select :status, [['未対応',0],['処理中',1],['処理済み',2],['完了',3]] %>
  </div>

  <div class="goal-form-button-cover">
    <%= form.submit "登録", class: "goal-form-button" %>
  </div>
<% end %>