<h1>プロフィール</h1>

<p>名前：<%= @user.username %></p>
<p>メールアドレス : <%= @user.email %></p>

<p><%=link_to "フォロー", follows_user_path(@user.id) %></p>
<p><%=link_to "フォロワー", followers_user_path(@user.id) %></p>

<% @users.each do |user| %>
  <% if current_user != user %>
      <% if user.already_followed?(current_user) %>
          <p><%=link_to "フォロー中", user_relationships_path(user.id), method: :delete %></p>
      <% else %>
          <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
      <% end %>
  <% end %>
<% end %>

