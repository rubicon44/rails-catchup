<% group.each do |user| %>
  <div class="user">
    <!-- ユーザーカード：アバター -->
    <div class="user-image-cover">
      <% if user.avatar? %>
        <%= link_to image_tag(user.avatar.url, size: "250x250", alt: "avatar image", class: "user-image"), user_path(user) %>
      <% else %>
        <%= link_to image_tag("no_user.png", size: "250x250", alt: "avatar image", class: "user-image"), user_path(user) %>
      <% end %>
    </div>

    <!-- ユーザーカード：名前とユーザーネーム -->
    <div class="user-username">
      @<%= user.username %>
    </div>
  </div>
<% end %>