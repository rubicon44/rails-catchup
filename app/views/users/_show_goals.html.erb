<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
  </tr>

  <% group.each do |goal| %>
    <tr>
      <td><%= link_to goal.name, goal_path(goal) unless goal.user.blank? %></td>
      <td><%= goal.description %></td>
      <% case goal.status %>
      <% when 0 then %>
        <td>未対応</td>
      <% when 1 then %>
        <td>処理中</td>
      <% when 2 then %>
        <td>処理済み</td>
      <% when 3 then %>
        <td>完了</td>
      <% end %>

      <td><%= link_to 'Show', goal_path(goal) %></td>
      <% if goal.user == current_user %>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal_path(goal), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<div>
  <%= paginate group %>
  <div">
    <button>さらに表示</button>
  </div>
</div>